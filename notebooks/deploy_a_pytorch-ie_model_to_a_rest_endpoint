        "def get_people(document: str) -> List[str]:\n",
        "  doc = PersonDetectorDocument(document)\n",
        "  pipeline(doc)\n",
        "  results: List[str] = []\n",
        "  for entity in doc.entities.predictions:\n",
        "    if entity.label == \"PER\":\n",
        "      results.append(str(entity))\n",
        "  return results"
      ],
